<p style="color: green"><%= notice %></p>

<%= render @recipe %>

<%= form_tag checkbox_path, method: :put, id: 'my-form' do %>
<div class="form-check form-switch">
  <%= check_box_tag 'public', '1', @recipe.public, class: 'form-check-input', id: 'flexSwitchCheckChecked' %>
  <%= label_tag 'flexSwitchCheckChecked', 'Public', class: 'form-check-label' %>
</div>
<% end %>

<div>
  <%
=begin%>
 <%= button_to "Generate shopping list", edit_recipe_path(@recipe) %> |
  <%= button_to "Add ingredient", recipes_path %>  
<%
=end%>
  <button>Generate shopping list</button>
  <button>Add ingredient</button>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @recipe_foods.includes(:food).each do |item|%>
    <tr>
      <td><%= item.food.name%></td>
      <td><%= item.quantity%> <%=item.food.measurement_unit%> </td>
      <td><%= item.food.price%></td>
      <td><%= button_to 'Remove', recipe_food_path(item.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
